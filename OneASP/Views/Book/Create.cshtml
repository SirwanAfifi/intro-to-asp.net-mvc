@model OneASP.Models.Book
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm(controllerName: "Book", actionName: "CreateWithRequest"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Title)
        @Html.TextBoxFor(p => p.Title, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Genre)
        @Html.EnumDropDownListFor(p => p.Genre, "Select an Item", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.IsAvalible)
        @Html.EditorFor(p => p.IsAvalible, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Author)
        @Html.TextBoxFor(p => p.Author, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description)
        @Html.TextAreaFor(p => p.Description, 5, 5, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.ReleasedDate)
        @Html.DisplayFor(p => p.ReleasedDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.ReleasedDate)
        @Html.TextBoxFor(p => p.ReleasedDate, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-info" />
    </div>
}

